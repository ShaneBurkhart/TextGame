package com.donkka.entities;

import com.badlogic.gdx.graphics.g2d.Sprite;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.math.Vector2;
import com.donkka.helpers.Dimensions;

public class FloatingSprite {
	protected Sprite sprite;
	protected Vector2 pos;
	protected float scale = 1;
	protected int dimensionFloat = Dimensions.Floats.LEFT;
	protected Vector2 offset;
	
	public FloatingSprite(float xOffset, float yOffset, int dimensionFloat, Sprite sprite){
		this.sprite = sprite;
		this.dimensionFloat = dimensionFloat;
		this.offset = new Vector2(xOffset, yOffset);
	}
	
	public FloatingSprite(Sprite sprite){
		this(0, 0, Dimensions.Floats.LEFT, sprite);
	}
	
	public FloatingSprite(int xOffset, Sprite sprite){
		this(xOffset, 0, Dimensions.Floats.LEFT, sprite);
	}
	
	public FloatingSprite(int xOffset, int dimensionFloat, Sprite sprite){
		this(xOffset, 0, dimensionFloat, sprite);
	}
	
	public void render(SpriteBatch batch){
		if(dimensionFloat == Dimensions.Floats.LEFT)
			pos.set(Dimensions.getLeft() + offset.x, Dimensions.getTop() - offset.y);
		else
			pos.set(Dimensions.getRight() - offset.x, Dimensions.getTop() - offset.y);
		
		sprite.setPosition(pos.x, pos.y);
		sprite.setScale(scale);
		sprite.draw(batch);
	}
}
